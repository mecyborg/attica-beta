<%- model_class = Catg -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<%= page_entries_info @catgs %>
<hr/>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:nop) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @catgs.each do |catg| %>
      <tr>
        <td><%= link_to catg.id, catg_path(catg) %></td>
        <td><%= catg.name %></td>
        <td><%= prod_count(catg.id) %></td>
        <td><%=l catg.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_catg_path(catg), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      catg_path(catg),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<hr/>
<%= paginate @catgs,:theme => 'twitter-bootstrap' %>
<br/>
<%= link_to t('.new', :default => t("helpers.links.new")),
            new_catg_path,
            :class => 'btn btn-primary' %>
